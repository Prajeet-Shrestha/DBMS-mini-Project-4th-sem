                background_color: (.06,.47,.47,1)
                background_normal: ''
                on_state: root.change_screen(self)
            ToggleButton:
                id: purchases
                text: 'purchases'
                size_hint_y: None
                height: 35
                background_color: (.06,.47,.47,1)
                background_normal: ''
                group: 'operator_nav'
                on_state: root.change_screen(self)
            ToggleButton:
