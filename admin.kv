#<FlatButton@ButtonBehavior+Label>

<AdminWindow>:
    id: main_win
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: (.06,.45,.45,1)
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        id: top_nav
        size_hint_y: None
        height:30
        pos: self.pos
        canvas.before:
            Color:
                rgba: (.06,.45,.45,1)
            Rectangle:
                size: self.size
                pos: self.pos
        Button:
            id: file_trigger
            text: 'Table Name'
            size_hint: (.1,None)
            background_color: (.06,.47,.47,1)
            background_normal: ''
            height:30
            on_release: file_dropdown.open(self)
            Widget:
                on_parent: file_dropdown.dismiss()
                DropDown:
                    id: file_dropdown
                    Button:
                        id:close
                        text: 'Quit'
                        size_hint_y: None
                        height: 30
                    

        Label:
            text: 'Main Dashboard'
            bold: True
            height: 30
            size_hint: (.9,None)
    BoxLayout:
        id: content_nav
        pos_hint:{'top': 1}
        BoxLayout:
            id: nav_tabs
            size_hint_x: .2
            orientation: 'vertical'
            spacing: 4
            pos_hint:{'top': 1}
            canvas.before:
                Color:
                    rgba: (.06,.40,.40,1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            ToggleButton:
                id: Employee
                text: 'Employee'
                size_hint_y: None
                height: 35
                state: 'down'
                background_color: (.06,.47,.47,1)
                background_normal: ''
                group: 'operator_nav'
                on_state: root.change_screen(self)
            ToggleButton:
                id: post
                text: 'post'
                size_hint_y: None
                height: 35
                background_color: (.06,.47,.47,1)
                background_normal: ''
                group: 'operator_nav'
                on_state: root.change_screen(self)
            ToggleButton:
